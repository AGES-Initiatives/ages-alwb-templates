Template rid_EpistleProkeimena_Daily

Status NA

 	import liturgical.verses_gr_GR_cog.*

	import actors_gr_GR_cog.*
	import dismissals_gr_GR_cog.*
	import misc_gr_GR_cog.*
	import prayers_gr_GR_cog.*
	import rubrical_gr_GR_cog.*
	import template.titles_gr_GR_cog.*
	import titles_gr_GR_cog.*
		
	import iTags.*
	import bTags.*
	import roles.*
	
//These sections compute the the title and prokeimenon for days of the week.
//They are inserted in the templates LectionaryEpistleProkeimenonTitle.atem and LectionaryEpistleProkeimenon.atem

	Section da_ep_title
			when-name-of-day-is 
				Monday use:
					Title<r>sid Prokeimenon sid Mode4 sid psLI.weekday.d2.prokeimenon.title</>End-Title		
				Tuesday use:
					Title<r>sid Prokeimenon sid Mode7 sid psLI.weekday.d3.prokeimenon.title</>End-Title		
				Wednesday use:
					Title<r>sid Prokeimenon sid Mode3 sid psLI.weekday.d4.prokeimenon.title</>End-Title		
				Thursday use:
					Title<r>sid Prokeimenon sid Mode8 sid psLI.weekday.d5.prokeimenon.title</>End-Title		
				Friday use:
					Title<r>sid Prokeimenon sid Mode7 sid psLI.weekday.d6.prokeimenon.title</>End-Title		
				Saturday use:
					Title<r>sid Prokeimenon sid Mode6 sid psLI.weekday.d7.prokeimenon.title</>End-Title		
				Sunday use:
					when-mode-of-week-is
						M1 use:
							Title<r>sid Prokeimenon sid Mode1 sid psLI.sunday.m1.prokeimenon.title</>End-Title
						M2 use:
							Title<r>sid Prokeimenon sid Mode2 sid psLI.sunday.m2.prokeimenon.title</>End-Title
						M3 use:
							Title<r>sid Prokeimenon sid Mode3 sid psLI.sunday.m3.prokeimenon.title</>End-Title
						M4 use:
							Title<r>sid Prokeimenon sid Mode4 sid psLI.sunday.m4.prokeimenon.title</>End-Title
						M5 use:
							Title<r>sid Prokeimenon sid Mode5 sid psLI.sunday.m5.prokeimenon.title</>End-Title
						M6 use:
							Title<r>sid Prokeimenon sid Mode6 sid psLI.sunday.m6.prokeimenon.title</>End-Title
						M7 use:
							Title<r>sid Prokeimenon sid Mode7 sid psLI.sunday.m7.prokeimenon.title</>End-Title
						M8 use:
							Title<r>sid Prokeimenon sid Mode8 sid psLI.sunday.m8.prokeimenon.title</>End-Title
					end-when
			end-when
	End-Section

	Section da_ep_prokeimenon
		when-name-of-day-is 
			Monday use:
				Para role readingzero sid psLI.weekday.d2.prokeimenon.v1.text @ver End-Para
				Verse<bnr>sid vVerse</>sid psLI.weekday.d2.prokeimenon.v2.text @ver End-Verse
			Tuesday use:
				Para role readingzero sid psLI.weekday.d3.prokeimenon.v1.text @ver End-Para
				Verse<bnr>sid vVerse</>sid psLI.weekday.d3.prokeimenon.v2.text @ver End-Verse
			Wednesday use:
				Para role readingzero sid psLI.weekday.d4.prokeimenon.v1.text @ver End-Para
				Verse<bnr>sid vVerse</>sid psLI.weekday.d4.prokeimenon.v2.text @ver End-Verse
			Thursday use:
				Para role readingzero sid psLI.weekday.d5.prokeimenon.v1.text @ver End-Para
				Verse<bnr>sid vVerse</>sid psLI.weekday.d5.prokeimenon.v2.text @ver End-Verse
			Friday use:
				Para role readingzero sid psLI.weekday.d6.prokeimenon.v1.text @ver End-Para
				Verse<bnr>sid vVerse</>sid psLI.weekday.d6.prokeimenon.v2.text @ver End-Verse
			Saturday use:
				Para role readingzero sid psLI.weekday.d7.prokeimenon.v1.text @ver End-Para
				Verse<bnr>sid vVerse</>sid psLI.weekday.d7.prokeimenon.v2.text @ver End-Verse
			Sunday use:
				when-mode-of-week-is
					M1 use:
						Para role readingzero sid psLI.sunday.m1.prokeimenon.v1.text @ver End-Para
						Verse<bnr>sid vVerse</>sid psLI.sunday.m1.prokeimenon.v2.text @ver End-Verse
					M2 use:
						Para role readingzero sid psLI.sunday.m2.prokeimenon.v1.text @ver End-Para
						Verse<bnr>sid vVerse</>sid psLI.sunday.m2.prokeimenon.v2.text @ver End-Verse
					M3 use:
						Para role readingzero sid psLI.sunday.m3.prokeimenon.v1.text @ver End-Para
						Verse<bnr>sid vVerse</>sid psLI.sunday.m3.prokeimenon.v2.text @ver End-Verse
					M4 use:
						Para role readingzero sid psLI.sunday.m4.prokeimenon.v1.text @ver End-Para
						Verse<bnr>sid vVerse</>sid psLI.sunday.m4.prokeimenon.v2.text @ver End-Verse
					M5 use:
						Para role readingzero sid psLI.sunday.m5.prokeimenon.v1.text @ver End-Para
						Verse<bnr>sid vVerse</>sid psLI.sunday.m5.prokeimenon.v2.text @ver End-Verse
					M6 use:
						Para role readingzero sid psLI.sunday.m6.prokeimenon.v1.text @ver End-Para
						Verse<bnr>sid vVerse</>sid psLI.sunday.m6.prokeimenon.v2.text @ver End-Verse
					M7 use:
						Para role readingzero sid psLI.sunday.m7.prokeimenon.v1.text @ver End-Para
						Verse<bnr>sid vVerse</>sid psLI.sunday.m7.prokeimenon.v2.text @ver End-Verse
					M8 use:
						Para role readingzero sid psLI.sunday.m8.prokeimenon.v1.text @ver End-Para
						Verse<bnr>sid vVerse</>sid psLI.sunday.m8.prokeimenon.v2.text @ver End-Verse
				end-when
		end-when
	End-Section

End-Template