//These sections compute the the title and prokeimenon for days of the week.
//They are inserted in the templates LectionaryEpistleProkeimenonTitle.atem and LectionaryEpistleProkeimenon.atem

	Section da_ep_title_mode
			when-name-of-day-is 
				Monday use: Insert_section d2.ep_title End-Insert
				Tuesday use: Insert_section d3.ep_title End-Insert
				Wednesday use: Insert_section d4.ep_title End-Insert
				Thursday use: Insert_section d5.ep_title End-Insert
				Friday use: Insert_section d6.ep_title End-Insert
				Saturday use: Insert_section d7.ep_title End-Insert
				Sunday use:
					when-mode-of-week-is
						M1 use: Insert_section d1.m1.ep_title End-Insert
						M2 use: Insert_section d1.m2.ep_title End-Insert
						M3 use: Insert_section d1.m3.ep_title End-Insert
						M4 use: Insert_section d1.m4.ep_title End-Insert
						M5 use: Insert_section d1.m5.ep_title End-Insert
						M6 use: Insert_section d1.m6.ep_title End-Insert
						M7 use: Insert_section d1.m7.ep_title End-Insert
						M8 use: Insert_section d1.m8.ep_title End-Insert
					end-when
			end-when
	End-Section

	Section da_ep_prokeimenon_verse
		when-name-of-day-is 
			Monday use: Insert_section d2.ep_prokeimenon End-Insert
			Tuesday use: Insert_section d3.ep_prokeimenon End-Insert
			Wednesday use: Insert_section d4.ep_prokeimenon End-Insert
			Thursday use: Insert_section d5.ep_prokeimenon End-Insert
			Friday use: Insert_section d6.ep_prokeimenon End-Insert
			Saturday use: Insert_section d7.ep_prokeimenon End-Insert
			Sunday use:
				when-mode-of-week-is
					M1 use: Insert_section d1.m1.ep_prokeimenon End-Insert
					M2 use: Insert_section d1.m2.ep_prokeimenon End-Insert
					M3 use: Insert_section d1.m3.ep_prokeimenon End-Insert
					M4 use: Insert_section d1.m4.ep_prokeimenon End-Insert
					M5 use: Insert_section d1.m5.ep_prokeimenon End-Insert
					M6 use: Insert_section d1.m6.ep_prokeimenon End-Insert
					M7 use: Insert_section d1.m7.ep_prokeimenon End-Insert
					M8 use: Insert_section d1.m8.ep_prokeimenon End-Insert
				end-when
		end-when
	End-Section

