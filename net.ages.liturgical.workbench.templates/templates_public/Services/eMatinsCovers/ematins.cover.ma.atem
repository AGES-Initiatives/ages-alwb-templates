Template ematins.cover.ma

Status Final

	import da.*
	import oc.*
	import me.*
	import eo.*
	import tr.*
	import pe.*
	
	import he.k_en_US_public.*
	import ematinscovers_en_US_ematins.*

	import actors_gr_GR_cog.*
	import misc_gr_GR_cog.*
	import prayers_gr_GR_cog.*
	import rubrical_gr_GR_cog.*
	import template.titles_gr_GR_cog.*
	import titles_gr_GR_cog.*

	import iTags.*
	import bTags.*
	import roles.*
	import rules.*
	
	
	Switch-Version L2 End-Switch-Version

	when-movable-cycle-day-is 
	64 use:
		Section tr_d064 //Palm Sunday
			Title role cover0 sid logo.text End-Title
			Title role cover1 sid ma.pdf.cover End-Title 	//Service
			Title role cover2 sid hw.palmsunday End-Title
			Insert_section Selector_Katavasias.k_title End-Insert	//Katavasia Moveable
		End-Section //tr_d064
	
	65, 66, 67, 68 use:
		Section hw_em1
			Title role cover0 sid logo.text End-Title
			Title role cover1 sid hw.pdf.cover ldp @Service_Year End-Title 	//Service
			Title role cover2 sid hw.bridegroomservice rid daVE.OnTheEveningBefore End-Title
			Title role cover4 sid ma.pdf.header sid d.of rid trShortCommemoration1.text End-Title	//Triodion
		End-Section //hw_em1
	69 use:
		Section hw_em2
			Title role cover0 sid logo.text End-Title
			Title role cover1 sid hw.pdf.cover ldp @Service_Year End-Title 	//Service
			Title role cover2 sid hw.passion rid daVE.OnTheEveningBefore End-Title
			Title role cover4 sid ma.pdf.header sid d.of rid trShortCommemoration1.text End-Title	//Triodion
		End-Section // hw_em2
	70 use:
		Section hw_em3
			Title role cover0 sid logo.text End-Title
			Title role cover1 sid hw.pdf.cover ldp @Service_Year End-Title 	//Service
			Title role cover2 sid hw.lamentation End-Title
			Title role cover2 sid d.onFridayEvening End-Title
			Title role cover4 sid ma.pdf.header sid d.of rid trShortCommemoration1.text End-Title	//Triodion
		End-Section //hw_em3
	71 use:
		Section pa_ma1
			Title role cover0 sid logo.text End-Title
			Title role cover1 sid ma.pdf.cover End-Title 	//Service
			Title role cover2 ldp @Service_Date End-Title	//Date
			Title role cover4 rid peShortCommemoration1.text End-Title	//Pentecostarion
			Insert_section Selector_Katavasias.k_title End-Insert	//Katavasia Moveable
		End-Section //pa_ma1
	72 thru 76 use:
		Section pa_ma2
			Title role cover0 sid logo.text End-Title
			Title role cover1 sid ma.pdf.cover End-Title 	//Service
			Title role cover2 ldp @Service_Date End-Title	//Date
			Title role cover4 rid peShortCommemoration1.text End-Title	//Pentecostarion
			when-date-is Apr 23, 25 use:
				Title role cover4 rid meShortCommemoration1.text End-Title
			end-when
			Insert_section Selector_Katavasias.k_title End-Insert	//Katavasia Moveable
		End-Section //pa_ma2
	
		otherwise use:
			Section Normal	
				Title role cover0 sid logo.text End-Title
				Title role cover1 sid ma.pdf.cover End-Title 	//Service
				Title role cover2 ldp @Service_Date End-Title	//Date
				when-exists
					rid trShortCommemoration1.text use:
						Title role cover4 rid trShortCommemoration1.text End-Title	//Triodion
					rid peShortCommemoration1.text use:
						Title role cover4 rid peShortCommemoration1.text End-Title	//Pentecostarion
					otherwise use:
						Title role cover4 rid meShortCommemoration1.text End-Title	//Menaion
				end-when
				
			//	Title role cover3 rid meShortCommemoration1.text End-Title	//to force Menaion when needed
			
				when-name-of-day-is Sunday use:	//Sunday Mode and Eothinon
					when-movable-cycle-day-is 
						78 use: //leave blank
						85 thru 113 use:
							Title role cover4 rid ocVE.Apolytikion.mode End-Title
						120 use: //leave blank
						otherwise use:
							Title role cover4 rid ocVE.Apolytikion.mode sid Eothinon ldp @Eothinon End-Title
					end-when
				end-when
			
			Insert_section Selector_Katavasias.k_title End-Insert	//Katavasia Moveable
			End-Section //Normal
	end-when
	
	Title role cover5 sid pref.generation_public.cover.version End-Title //GE or E
	
	Switch-Version Both End-Switch-Version	

End-Template